<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

	<persistence-unit name="leave-persistence"	transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

<!-- 		<class>za.ac.nwu.bonsai.businessobject.LeaveBalance</class> -->
		<class>za.ac.nwu.bonsai.businessobject.Holiday</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<properties>
			<property name="hibernate.transaction.manager_lookup_class"	value="org.hibernate.transaction.JOTMTransactionManagerLookup" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
		
	</persistence-unit>

</persistence>