<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="LeaveTransactionView" parent="BON-FormView">
        <property name="formClass" value="za.ac.nwu.bonsai.form.LeaveTransactionForm"/>
        <property name="page.items">
            <list>
                <bean parent="Uif-VerticalBoxSection" p:width="400px" p:style="margin-top:25px">
                    <property name="items">
                        <list>
                            <bean parent="Uif-HeaderTwo" p:headerText="Leave History"/>
                            <bean parent="Uif-TableCollectionSection">
                                <property name="collectionObjectClass" value="za.ac.nwu.bonsai.businessobject.LeaveTransaction"/>
                                <property name="propertyName" value="transactions"/>
                                <property name="readOnly" value="true"/>
                                <property name="layoutManager.renderSequenceField" value="false"/>
                                <property name="layoutManager.richTable.render" value="false"/>
                                <property name="renderLineActions" value="false"/>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-InputField" p:label="Type" p:propertyName="type"/>
                                        <bean parent="Uif-InputField" p:label="Date From" p:propertyName="fromDate"/>
                                        <bean parent="Uif-InputField" p:label="Date To" p:propertyName="toDate"/>
                                        <bean parent="Uif-InputField" p:label="Total Days" p:propertyName="totalDays"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>

    </bean>


</beans>


